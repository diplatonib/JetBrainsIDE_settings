<templateSet group="user">
  <template name="vn" value="{{ settings.vendor_name }}" description="TrueConf as {{ settings.vendor_name }} twig variable" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="Twig" value="true" />
    </context>
  </template>
  <template name="bu" value="{{ settings.blog_url }}" description="TC_WEB blog url twig variable" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
      <option name="HTML_TEXT" value="false" />
    </context>
  </template>
  <template name="tcv" value="{{ settings.videobar_name }}" description="TrueConf Videobar as twig variable" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="Twig" value="true" />
    </context>
  </template>
  <template name="sln" value="{{ site.link($CLIPBOARD_ID$$END$) }}" description="TC_WEB sitemap link by ID" toReformat="true" toShortenFQNames="true">
    <variable name="CLIPBOARD_ID" expression="clipboard()" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="HTML" value="true" />
      <option name="HTML_TEXT" value="false" />
    </context>
  </template>
  <template name="tcs" value="{{ settings.server_name }}" description="TrueConf Server as twig variable" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="Twig" value="true" />
    </context>
  </template>
  <template name="tcr" value="{{ settings.room_name }}" description="TrueConf Room as twig variable" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="Twig" value="true" />
    </context>
  </template>
  <template name="tcg" value="{{ settings.group_name }}" description="TrueConf Group as twig variable" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="Twig" value="true" />
    </context>
  </template>
  <template name="tct" value="{{ settings.terminal_name }}" description="TrueConf Group as twig variable" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="Twig" value="true" />
    </context>
  </template>
  <template name="tcsf" value="{{ settings.server_name_free }}" description="TrueConf Server Free as twig variable" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="Twig" value="true" />
    </context>
  </template>
</templateSet>